@model List<SubSector>

@{ViewBag.Title = "Lista SubSectores";}

@await Html.PartialAsync("_NavbarAdministracion")

@{
    Func<dynamic, object> sectorTemplate =
    @<tr>
        <td class="align-middle">@item.Nombre</td>
        <td class="align-middle">@item.Descripcion</td>
        <td class="align-middle">@item.Epc</td>
        <td class="align-middle">@item.FkIdSectorNavigation.Nombre</td>
        <td class="align-middle">
            <a class="btn btn-primary btn-sm" href="EditarSubSector/@item.IdSubSector">Editar</a>
            <a class="btn btn-danger btn-sm" href="EliminarSubSector/@item.IdSubSector">Eliminar</a>
        </td>
    </tr>;
}

<div class="container mt-5">
    <div class="row">
        <div class="col">
            <h1>SubSectores</h1>
        </div>
        <div class="col text-end">
            <a asp-action="CrearSubSector" class="btn btn-primary">Crear</a>
        </div>
    </div>
</div>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Epc</th>
                <th>Sector</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sector in Model)
            {
                @sectorTemplate(sector)
            }
        </tbody>
    </table>
</div>