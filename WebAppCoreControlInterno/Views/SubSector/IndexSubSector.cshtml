@model List<SubSector>

@{ViewBag.Title = "Lista SubSectores";}

@await Html.PartialAsync("_NavbarAdministracion")

@{
    Func<dynamic, object> sectorTemplate =
    @<tr>
        <td class="align-middle">@item.Nombre</td>
        <td class="align-middle">@item.Descripcion</td>
        <td class="align-middle">@item.Epc</td>
        <td class="align-middle">@item.FkIdSectorNavigation.Nombre</td>
        <td class="align-middle">
            <a class="btn btn-primary btn-sm" href="EditarSubSector/@item.IdSubSector">Editar</a>
            <a class="btn btn-danger btn-sm" href="EliminarSubSector/@item.IdSubSector">Eliminar</a>
        </td>
    </tr>;
}

<div class="container mt-5">
    <div class="row">
        <div class="col">
            <h1>SubSectores</h1>
        </div>
        <div class="col text-end">
            <a asp-action="CrearSubSector" class="btn btn-primary">Crear</a>
        </div>
    </div>
</div>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <form>
                <th><input type="text" class="form-control shadow-sm w-auto" autocomplete="off" placeholder="Nombre" name="nombre" value=@ViewBag.Nombre /></th>
                <th></th>
                <th><input type="text" class="form-control shadow-sm w-auto" autocomplete="off" placeholder="EPC" name="epc" value=@ViewBag.Epc /></th>
                <th><input type="text" class="form-control shadow-sm w-auto" autocomplete="off" placeholder="Sucursal" name="sucursal" value=@ViewBag.Sucursal /></th>
                <th class="text-end">
                    <input type="submit" value="filtrar" class="btn btn-success" />
                    <a type="button" class="btn btn-danger" asp-action="IndexSubSector">X</a>
                </th>
                </form>
            </tr>
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Epc</th>
                <th>Sector</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sector in Model)
            {
                @sectorTemplate(sector)
            }
        </tbody>
    </table>
</div>