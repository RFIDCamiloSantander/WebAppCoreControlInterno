@using WebAppCoreControlInterno.Models.ViewModels
@model SucursalViewModel

@{ViewBag.Title = "Eliminar Sucursal";}

@await Html.PartialAsync("_NavbarAdministracion")

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-12 col-md-6">
            <div class="card shadow">
                @{
                    if(ViewBag.Errors == false)
                    {
                        <div class="card-body">
                            <h1 class="card-title">Eliminar</h1>
                            <h3>Seguro desea eliminar esta Sucursal?</h3>
                            <div>
                                <hr />
                                <dl class="row">
                                    <dt class="col-12 col-md-4">
                                        @Html.DisplayNameFor(model => model.Nombre)
                                    </dt>
                                    <dd class="col-12 col-md-8">
                                        @Html.DisplayFor(model => model.Nombre)
                                    </dd>
                                </dl>

                                <dl class="row">
                                    <dt class="col-12 col-md-4">
                                        @Html.DisplayFor(m => m.Direccion)
                                    </dt>
                                    <dd class="col-12 col-md-8">
                                        @Html.DisplayFor(model => model.Direccion)
                                    </dd>
                                </dl>

                                <dl class="row">
                                    <dt class="col-12 col-md-4">
                                        @Html.DisplayFor(model => model.Region)
                                    </dt>
                                    <dd class="col-12 col-md-8">
                                        @Html.DisplayFor(model => model.Region)
                                    </dd>
                                </dl>

                                <dl class="row">
                                    <dt class="col-12 col-md-4">
                                        @Html.DisplayNameFor(model => model.Comuna)
                                    </dt>
                                    <dd class="col-12 col-md-8">
                                        @Html.DisplayFor(model => model.Comuna)
                                    </dd>
                                </dl>

                                <dl class="row">
                                    <dt class="col-12 col-md-4">
                                        @Html.DisplayNameFor(model => model.Epc)
                                    </dt>
                                    <dd class="col-12 col-md-8">
                                        @Html.DisplayFor(model => model.Epc)
                                    </dd>
                                </dl>

                                <dl class="row">
                                    <dt class="col-12 col-md-4">
                                        @Html.DisplayNameFor(model => model.CoordenadaX)
                                    </dt>
                                    <dd class="col-12 col-md-8">
                                        @Html.DisplayFor(model => model.CoordenadaX)
                                    </dd>
                                </dl>

                                <dl class="row">
                                    <dt class="col-12 col-md-4">
                                        @Html.DisplayNameFor(model => model.CoordenadaY)
                                    </dt>
                                    <dd class="col-12 col-md-8">
                                        @Html.DisplayFor(model => model.CoordenadaY)
                                    </dd>
                                </dl>

                                <form asp-action="EliminarSucursal">
                                    <input type="hidden" asp-for="IdSucursal" />
                                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                                    <a class="btn btn-primary" asp-action="IndexSucursal">Volver a la Lista</a>
                                </form>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="card-body">
                            <h1 class="card-title text-danger">Error</h1>
                            <h3>Esta "sucursal" no se puede eliminar ya que esta asociado a algún elemento.</h3>
                        </div>
                        <div class="card-footer">
                            <a class="btn btn-primary" asp-action="IndexSucursal">Volver</a>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>