@model List<Estado>

@{ViewBag.Title = "Lista Estados";}

@await Html.PartialAsync("_NavbarAdministracion")

<div class="container mt-5">
    <div class="row">
        <div class="col">
            <h1>Estados</h1>
        </div>

        <div class="col text-end">
            <a asp-action="CrearEstado" class="btn btn-primary">
                Crear
            </a>
        </div>
    </div>
</div>

<div class="container">
    <table class="table">
        <thead>
            <form action="IndexEstado" method="get">
                <tr>
                    <th>
                        <input type="text" class="form-control shadow-sm w-auto" autocomplete="off" name="nombre" value=@ViewBag.Nombre />
                    </th>
                    <th class="align-middle text-end"><input type="submit" value="filtrar" class="btn btn-success" /></th>
                </tr>
            </form>
            <tr>
                <th>Estado</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var estado in Model)
            {
                <tr>
                    <td class="align-middle">@Html.DisplayFor(m => estado.Estado1)</td>
                    <td>
                        <a class="btn btn-primary btn-sm align-middle" href="EditarEstado/@estado.IdEstado">Editar</a>
                        <a class="btn btn-danger btn-sm align-middle" href="EliminarEstado/@estado.IdEstado">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>