@using WebAppCoreControlInterno.Models.ViewModels;
@model BaseViewModel;

<div class="container mt-5 mb-3">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h1 class="card-title">Editar ElementoBase</h1>
                    <div class="card-subtitle text-muted mb-3">Id: @Html.DisplayFor(m => m.IdBase)</div>
                    <form asp-action="EditarEmpleado">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        @Html.HiddenFor(m => m.IdBase)

                        <div class="row">
                            <div class="col-12 col-md-6">
                                <div>
                                    <label asp-for="Nombre" class="form-label"></label>
                                    <input asp-for="Nombre" class="form-control shadow-sm mb-3" />
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div>
                                    <label asp-for="Sku" class="form-label"></label>
                                    <input asp-for="Sku" class="form-control shadow-sm mb-3" />
                                    <span asp-validation-for="Sku" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12 col-md-6">
                                <div>
                                    <label asp-for="FkIdCategoria" class="form-label"></label>
                                    <input asp-for="FkIdCategoria" class="form-control shadow-sm mb-3" />
                                    <span asp-validation-for="FkIdCategoria" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div>
                                    <label asp-for="Descripcion" class="form-label"></label>
                                    <input asp-for="Descripcion" class="form-control shadow-sm mb-3" />
                                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row text-end">
                            <div class="col">
                                <button type="submit" value="Editar" class="btn btn-primary shadow-sm">Editar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>