@model List<Empleado>

@{ViewBag.Title = "Crear Empleado";}

@await Html.PartialAsync("_NavbarAdministracion")

<div class="container mt-5">
    <div class="row">
        <div class="col">
            <h1>Empleados</h1>
        </div>
        <div class="col text-end">
            <a asp-action="CrearEmpleado" class="btn btn-primary">Crear</a>
        </div>
    </div>
</div>
<div class="container">
    <table class="table">
        <thead>
            <form action="IndexEmpleado" method="get">
                <tr>
                    <th><input type="text" class="form-control shadow-sm w-auto" autocomplete="off" placeholder="RUT" name="rut" value=@ViewBag.Rut /></th>
                    <th><input type="text" class="form-control shadow-sm w-auto" autocomplete="off" placeholder="Nombres" name="nombre" value=@ViewBag.Nombre /></th>
                    <th><input type="text" class="form-control shadow-sm w-auto" autocomplete="off" placeholder="Apellidos" name="apellido" value=@ViewBag.Apellido /></th>
                    <th></th>
                    <th></th>
                    <th class="text-end">
                        <input type="submit" value="Filtrar" class="btn btn-success" />
                    </th>
                    <th class="text-end">
                        <a type="button" class="btn btn-danger" asp-action="IndexEmpleado">X</a>
                    </th>
                </tr>
            </form>
            <tr>
                <th>RUT</th>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>Tag/Epc</th>
                <th>Fotografia</th>
                <th>Cargo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var empleado in Model)
            {
                <tr>
                    <td class="align-middle">@Html.DisplayFor(m => empleado.Rut)</td>
                    <td class="align-middle">@Html.DisplayFor(m => empleado.Nombre1) @Html.DisplayFor(m => empleado.Nombre2)</td>
                    <td class="align-middle">@Html.DisplayFor(m => empleado.Apellido1) @Html.DisplayFor(m => empleado.Apellido2)</td>
                    <td class="align-middle">@Html.DisplayFor(m => empleado.Epc)</td>
                    <td class="align-middle">@Html.DisplayFor(m => empleado.Fotografia)</td>
                    <td class="align-middle">@Html.DisplayFor(m => empleado.FkIdCargoNavigation.Cargo1)</td>
                    <td class="align-middle">
                        <a class="btn btn-primary btn-sm" href="EditarEmpleado/@empleado.IdEmpleado">Editar</a>
                        <a class="btn btn-danger btn-sm" href="EliminarEmpleado/@empleado.IdEmpleado">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>