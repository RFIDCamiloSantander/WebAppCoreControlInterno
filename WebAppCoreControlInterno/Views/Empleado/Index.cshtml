@model List<Empleado>

<div class="container mt-5">
    <div class="row">
        <div class="col">
            <h1>Empleados</h1>
        </div>
        <div class="col text-end">
            <a asp-action="Create" class="btn btn-primary">Crear</a>
        </div>
    </div>
</div>
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>RUT</th>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>Tag/Epc</th>
                <th>Fotografia</th>
                <th>Cargo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var empleado in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => empleado.Rut)</td>
                    <td>@Html.DisplayFor(m => empleado.Nombre1) @Html.DisplayFor(m => empleado.Nombre2)</td>
                    <td>@Html.DisplayFor(m => empleado.Apellido1) @Html.DisplayFor(m => empleado.Apellido2)</td>
                    <td>@Html.DisplayFor(m => empleado.Epc)</td>
                    <td>@Html.DisplayFor(m => empleado.Fotografia)</td>
                    <td>@Html.DisplayFor(m => empleado.FkIdCargoNavigation.Cargo1)</td>
                    <td>
                        <a class="btn btn-primary btn-sm" href="Empleado/EditarEmpleado/@empleado.IdEmpleado">Editar</a>
                        <a class="btn btn-danger btn-sm" href="Empleado/Eliminar/@empleado.IdEmpleado">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>