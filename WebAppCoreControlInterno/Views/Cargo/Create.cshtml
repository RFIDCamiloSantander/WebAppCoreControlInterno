@using WebAppCoreControlInterno.Models.ViewModels;
@model CargoViewModel;

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-4">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title">Crear Cargo</h1>
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="mb-3">
                            <label class="form-label" for="txtCargo" asp-for="Cargo1">Cargo</label>
                            <input class="form-control" type="text" id="txtCargo" asp-for="Cargo1" />
                            <span class="text-danger" asp-validation-for="Cargo1"></span>
                        </div>
                        <button class="btn btn-primary btn-lg" type="submit" value="Create">Crear Cargo</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}