@using WebAppCoreControlInterno.Models.ViewModels
@model LectorViewModel

@{ViewBag.Title = "Editar Lector";}

@await Html.PartialAsync("_NavbarAdministracion")

<div class="container mt-5 mb-3">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h1 class="card-title">Editar Lector</h1>
                    <div class="card-subtitle text-muted mb-3">Id: @Html.DisplayFor(c => c.IdLector)</div>
                    <form asp-action="EditarLector">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        @*@Html.HiddenFor(c => c.IdEmpleado)*@
                        <input type="hidden" asp-for="IdLector" />
                        <div class="row">
                            <div class="col-12 col-md-6">
                                <div>
                                    <label asp-for="Mac" class="form-label"></label>
                                    <input asp-for="Mac" class="form-control shadow-sm mb-3" />
                                    <span asp-validation-for="Mac" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div>
                                    <label asp-for="Ip" class="form-label"></label>
                                    <input asp-for="Ip" class="form-control shadow-sm mb-3" />
                                    <span asp-validation-for="Ip" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-6">
                                <div>
                                    <label asp-for="NroSerie" class="form-label"></label>
                                    <input asp-for="NroSerie" class="form-control shadow-sm mb-3" />
                                    <span asp-validation-for="NroSerie" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div>
                                    <label asp-for="NroParte" class="form-label"></label>
                                    <input asp-for="NroParte" class="form-control shadow-sm mb-3" />
                                    <span asp-validation-for="NroParte" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-6">
                                <div>
                                    <label asp-for="Marca" class="form-label"></label>
                                    <input asp-for="Marca" class="form-control shadow-sm mb-3" />
                                    <span asp-validation-for="Marca" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div>
                                    <label asp-for="Modelo" class="form-label"></label>
                                    <input asp-for="Modelo" class="form-control shadow-sm mb-3" />
                                    <span asp-validation-for="Modelo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-6">
                                <div>
                                    <label asp-for="FkIdSucursal" class="form-label"></label>
                                    <select asp-for="FkIdSucursal" asp-items="ViewBag.Sucursals" class="form-control shadow-sm">
                                        <option value="null">Sucursal</option>
                                    </select>
                                    <span asp-validation-for="FkIdSucursal" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div>
                                    <label asp-for="Descripcion" class="form-label"></label>
                                    <input asp-for="Descripcion" class="form-control shadow-sm mb-3" />
                                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row text-end">
                            <div class="col">
                                <button type="submit" value="Editar" class="btn btn-primary shadow-sm">Editar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>