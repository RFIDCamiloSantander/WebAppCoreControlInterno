@using WebAppCoreControlInterno.Models.ViewModels
@model SectorViewModel

@{ViewBag.Title = "Crear Sector";}

@await Html.PartialAsync("_NavbarAdministracion")

@{/*Vista para crear Sector*/}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-12 col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h1 class="card-title">Crear Sector</h1>

                    <form asp-action="CrearSector">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <p class="text-danger text-center h6">@ViewBag?.ErrorMessage</p>
                        <div class="row mb-3">
                            <div class="col-6">
                                <div class="form-group">
                                    <label asp-for="Nombre" class="form-label"></label>
                                    <input asp-for="Nombre" class="form-control shadow-sm" />
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label asp-for="FkIdSucursal" class="form-label"></label>
                                    <select asp-for="FkIdSucursal" asp-items="ViewBag.Sucursals" class="form-control shadow-sm">
                                        <option>Sucursal</option>
                                    </select>
                                    <span asp-validation-for="FkIdSucursal" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="Descripcion" class="form-label"></label>
                                    <input asp-for="Descripcion" class="form-control shadow-sm" />
                                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <a class="btn btn-info" asp-action="IndexSector">Volver</a>
                            </div>
                            <div class="col text-end">
                                <button class="btn btn-primary" type="submit">Crear</button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}