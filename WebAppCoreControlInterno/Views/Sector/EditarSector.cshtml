@using WebAppCoreControlInterno.Models.ViewModels
@model SectorViewModel

@{ViewBag.Title = "Editar Sector";}

@await Html.PartialAsync("_NavbarAdministracion")

<div class="container mt-5 mb-3">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h1 class="card-title">Editar Sector</h1>
                    <div class="card-subtitle text-muted mb-3">Id: @Html.DisplayFor(c => c.IdSector)</div>
                    <form asp-action="EditarSector">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        @*@Html.HiddenFor(c => c.IdEmpleado)*@
                        <input type="hidden" asp-for="IdSector" />
                        <div class="row">
                            <div class="col-12 col-md-6">
                                <div>
                                    <label asp-for="Nombre" class="form-label"></label>
                                    <input asp-for="Nombre" class="form-control shadow-sm mb-3" />
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div>
                                    <label asp-for="FkIdSucursal" class="form-label"></label>
                                    <select asp-for="FkIdSucursal" asp-items="@ViewBag.Sucursals" class="form-control shadow-sm">
                                        <option value="">Sucursal</option>
                                    </select>
                                    <span asp-validation-for="FkIdSucursal" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div>
                                    <label asp-for="Descripcion" class="form-label"></label>
                                    <input asp-for="Descripcion" class="form-control shadow-sm mb-3" />
                                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <a class="btn btn-danger shadow-sm" asp-action="IndexSector">Cancelar</a>
                            </div>
                            <div class="col text-end">
                                <button type="submit" value="Editar" class="btn btn-primary shadow-sm">Editar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>