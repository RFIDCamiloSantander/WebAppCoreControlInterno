@using WebAppCoreControlInterno.Models.ViewModels
@model SectorViewModel

@{
    ViewData["Title"] = "Eliminar Sector";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-12 col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h1 class="card-title">Eliminar</h1>
                    <h3>Seguro desea eliminar esta Sucursal?</h3>
                    <div>
                        <hr />
                        <dl class="row">
                            <dt class="col-12 col-md-4">
                                @Html.DisplayNameFor(model => model.Nombre)
                            </dt>
                            <dd class="col-12 col-md-8">
                                @Html.DisplayFor(model => model.Nombre)
                            </dd>
                        </dl>

                        <dl class="row">
                            <dt class="col-12 col-md-4">
                                @Html.DisplayFor(m => m.FkIdSucursal)
                            </dt>
                            <dd class="col-12 col-md-8">
                                @Html.DisplayFor(model => model.FkIdSucursal)
                            </dd>
                        </dl>

                        <dl class="row">
                            <dt class="col-12 col-md-4">
                                @Html.DisplayFor(model => model.Descripcion)
                            </dt>
                            <dd class="col-12 col-md-8">
                                @Html.DisplayFor(model => model.Descripcion)
                            </dd>
                        </dl>

                        <form asp-action="EliminarSector">
                            <input type="hidden" asp-for="IdSector" />
                            <input type="submit" value="Eliminar" class="btn btn-danger" />
                            <a class="btn btn-primary" asp-action="IndexSector">Volver a la Lista</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>