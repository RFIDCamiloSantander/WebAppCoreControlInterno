@using WebAppCoreControlInterno.Models.ViewModels
@model ElementoViewModel

@{ViewBag.Title = "Crear Elemento";}

@await Html.PartialAsync("_NavbarAdministracion")

<div class="container mt-5 mb-3">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h1 class="card-title">Editar Elemento</h1>
                    <div class="card-subtitle text-muted mb-3">Id: @Html.DisplayFor(c => c.IdElemento)</div>
                    <form asp-action="EditarElemento">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        @*@Html.HiddenFor(c => c.IdEmpleado)*@
                        <input type="hidden" asp-for="IdElemento" />
                        <div class="row mb-3">
                            <div class="col-6">
                                <div class="form-group">
                                    <label asp-for="Epc" class="form-label"></label>
                                    <input asp-for="Epc" class="form-control shadow-sm" />
                                    <span asp-validation-for="Epc" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label asp-for="Dimension" class="form-label"></label>
                                    <input asp-for="Dimension" class="form-control shadow-sm" />
                                    <span asp-validation-for="Dimension" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-6">
                                <div class="form-group">
                                    <label asp-for="Dimension" class="form-label"></label>
                                    <input asp-for="Dimension" class="form-control shadow-sm" />
                                    <span asp-validation-for="Dimension" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label asp-for="PesoKg" class="form-label"></label>
                                    <input asp-for="PesoKg" class="form-control shadow-sm" />
                                    <span asp-validation-for="PesoKg" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-6">
                                <div class="form-group">
                                    <label asp-for="NroSerie" class="form-label"></label>
                                    <input asp-for="NroSerie" class="form-control shadow-sm" />
                                    <span asp-validation-for="NroSerie" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label asp-for="NroParte" class="form-label"></label>
                                    <input asp-for="NroParte" class="form-control shadow-sm" />
                                    <span asp-validation-for="NroParte" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-6">
                                <div class="form-group">
                                    <label asp-for="InformacionExtra" class="form-label"></label>
                                    <input asp-for="InformacionExtra" class="form-control shadow-sm" />
                                    <span asp-validation-for="InformacionExtra" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label asp-for="Fotografia" class="form-label"></label>
                                    <input asp-for="Fotografia" class="form-control shadow-sm" />
                                    <span asp-validation-for="Fotografia" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-6">
                                <div class="form-group">
                                    <label asp-for="FkIdEstado" class="form-label"></label>
                                    <input asp-for="FkIdEstado" class="form-control shadow-sm" />
                                    <span asp-validation-for="FkIdEstado" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label asp-for="FkIdSucursal" class="form-label"></label>
                                    <input asp-for="FkIdSucursal" class="form-control shadow-sm" />
                                    <span asp-validation-for="FkIdSucursal" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-6">
                                <div class="form-group">
                                    <label asp-for="FkIdSector" class="form-label"></label>
                                    <input asp-for="FkIdSector" class="form-control shadow-sm" />
                                    <span asp-validation-for="FkIdSector" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label asp-for="FkIdSubSector" class="form-label"></label>
                                    <input asp-for="FkIdSubSector" class="form-control shadow-sm" />
                                    <span asp-validation-for="FkIdSubSector" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-6">
                                <div class="form-group">
                                    <label asp-for="FkIdSubSector" class="form-label"></label>
                                    <input asp-for="FkIdSubSector" class="form-control shadow-sm" />
                                    <span asp-validation-for="FkIdSubSector" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row text-end">
                            <div class="col">
                                <button type="submit" value="Editar" class="btn btn-primary shadow-sm">Editar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>