@model List<Antena>

@await Html.PartialAsync("_NavbarAdministracion")

@{
    Func<dynamic, object> antenaTemplate =
    @<tr>
        <td class="align-middle">@item.NumAntena</td>
        <td class="align-middle">@item.FkIdSector</td>
        <td class="align-middle">@item.FkIdSubSector</td>
        <td class="align-middle">@item.FkIdLectorNavigation.Mac</td>
        <td class="align-middle">
            <a class="btn btn-primary btn-sm" href="EditarAntena/@item.IdAntena">Editar</a>
            <a class="btn btn-danger btn-sm" href="EliminarAntena/@item.IdAntena">Eliminar</a>
        </td>
    </tr>;
}

<div class="container mt-5">
    <div class="row">
        <div class="col">
            <h1>Antenas</h1>
        </div>
        <div class="col text-end">
            <a asp-action="CrearAntena" class="btn btn-primary">Crear</a>
        </div>
    </div>
</div>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <form>
                <th></th>
                <th><input type="text" class="form-control shadow-sm" autocomplete="off" placeholder="Sector" name="sector" value=@ViewBag.Sector /></th>
                <th><input type="text" class="form-control shadow-sm" autocomplete="off" placeholder="SubSector" name="subsector" value=@ViewBag.SubSector /></th>
                <th><input type="text" class="form-control shadow-sm" autocomplete="off" placeholder="Lector" name="lector" value=@ViewBag.Lector /></th>
                <th class="text-end">
                    <input type="submit" value="filtrar" class="btn btn-success text-end" />
                    <a type="button" class="btn btn-danger" asp-action="IndexAntena">X</a>
                </th>
                </form>
            </tr>
            <tr>
                <th>N°Antena</th>
                <th>Sector</th>
                <th>SubSector</th>
                <th>Lector</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var antena in Model)
            {
                @antenaTemplate(antena)
            }
        </tbody>
    </table>
</div>