@model CategoriaViewModel

@{ViewBag.Title = "Crear Categoría";}

@await Html.PartialAsync("_NavbarAdministracion")

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-4">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title">Crear Categoria</h1>
                    <form asp-action="CrearCategoria">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <p class="text-danger text-center h6">@ViewBag?.ErrorMessage</p>
                        <div class="mb-3">
                            <label class="form-label" for="txtCategoria" asp-for="Nombre"></label>
                            <input class="form-control" type="text" id="txtCategoria" asp-for="Nombre" />
                            <span class="text-danger" asp-validation-for="Nombre"></span>
                        </div>
                        <div class="row">
                            <div class="col">
                                <a class="btn btn-info" asp-action="IndexCategoria">Volver</a>
                            </div>
                            <div class="col text-end">
                                <button class="btn btn-primary" type="submit" value="Create">Crear</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}